<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <%= simple_form_for @bot do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :brand, :label => "Brand" %>
          <%= f.input :emission_endpoint, :label => "Endpoint to send updates" %>
          <%= f.simple_fields_for :parameters do |p| %>
            <%= render 'parameters/parameter_fields', f: p %>
          <% end %>
          <div>
            <%= link_to_add_association 'Add a parameter', f, :parameters %>
          </div>
        </div>
        <div class="form-actions text-center">
          <%= f.button :submit, "Soumettre", :class => "btn btn-primary" %>
        </div>
      <% end %>
   </div>
  </div>
</div>

